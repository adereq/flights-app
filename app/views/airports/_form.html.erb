<%= form_with model: @airport, local: true do |form| %>
    <div class="form-row mb-4">
        <div class="col">
          <%= form.label :miasto %><br>
          <%= form.text_field :city, class: 'form-control', required: true %>
        </div>
        <div class="col">
          <%= form.label :kraj %><br>
          <%= form.text_field :country, class: 'form-control', required: true %>
        </div>
    </div>

    <div class="form-group">
      <%= form.label :nazwa %><br>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div> 
    <div class="form-row mb-4">
        <div class="col">
          <%= form.label :iata %><br>
          <%= form.text_field :iata, class: 'form-control', required: true, max_length: 3 %>
        </div>
        <div class="col">
          <%= form.label :strefa_czasowa %><br>
          <%= form.text_field :timezone, class: 'form-control' %>
        </div>
    </div>

