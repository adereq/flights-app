<h2>Lotniska</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Miasto</th>
        <th scope="col">Kraj</th>
        <th scope="col">Nazwa</th>
        <th scope="col">Kod IATA</th>
        <th scope="col">Akcje</th>
      </tr>
    </thead>
  <% @airports.each do |airport| %>
    <tbody>
      <tr>
        <a href="/airports/<%= airport.id %>">
        <th scope="row"><%= airport.id %></th>
        <td><%= airport.city %></td>
        <td><%= airport.country %></td>
        <td><%= airport.name %></td>
        <td><%= airport.iata %></td>
        <td><%= link_to 'Edytuj', edit_airport_path(airport.id) %>  <%= link_to 'UsuÅ„', airport_path(airport.id), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </a>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div class="row">
  <%= link_to 'Dodaj lotnisko', new_airport_path, class: 'btn btn-light' %>
</div>