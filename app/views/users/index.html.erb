 <div class="col-md-2 col-md-offset-4"></div>
  <div class="text-center border bg-light border-light p-5 col-8">
    <div class="form-row mb-2">
        <div class="col-2 h3">
          Użytkownicy
        </div>
        <div class="col-10 text-right">
          <%= link_to 'Dodaj użytkownika', new_user_path, class: 'btn btn-dark' %>
        </div>
    </div>

  <table class="table table-hover ">
    <thead class="thead-dark">
      <tr>
        <th>Mail</th>
        <th>Imię</th>
        <th>Nazwisko</th>
        <th>Superadmin</th>
        <th>Pracownik linii</th>
        <th>Pracownik lotniska</th>
        <th>Klient</th>
        <th></th>
      </tr>
    </thead>
  <% @users.each do |user| %>
    <tbody>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td>
          <% if user.superadmin_role %>
            <%= fa_icon "check-circle", class:"fa-2x" %>
          <% end %>
        </td>
        <td>
          <% if user.airline_manager_role %>
            <%= fa_icon "check-circle", class:"fa-2x" %>
          <% end %>            
        </td>
        <td>
          <% if user.airport_manager_role %>
            <%= fa_icon "check-circle", class:"fa-2x" %>
          <% end %>              
        </td>
        <td>
          <% if user.client_role %>
            <%= fa_icon "check-circle", class:"fa-2x" %>
          <% end %> 
        </td>    
        <td>
          <%= link_to edit_user_path(user.id), class:"text-dark" do %>  
            <%= fa_icon "edit" %>
          <% end %>
          <%= link_to user_path(user.id), class:"text-dark" do %>  
            <%= fa_icon "sticky-note" %>
          <% end %>
          <%= link_to user_path(user.id), method: :delete, data: { confirm: 'Czy jesteś pewien?' }, class:"text-danger" do %> 
            <%= fa_icon "trash" %>
          <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= paginate @users %>
</div>