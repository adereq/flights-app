<div class="col-md-5 col-md-offset-4"></div>
  <div class="text-center border bg-light border-light p-5">
    <p class="h3 mb-4 font-weight-bold "><%= @user.email %></p>
    <div class="col text-left">
  		<p>Imię: <%= @user.first_name %></p>
  		<p>Nazwisko: <%= @user.last_name %></p>
 		<p>Rola: 
 			<% if @user.superadmin_role? %>
  				Superadmin
  			<%elsif @user.airline_manager_role? %>
  				Pracownik linii lotniczej
  			<%elsif @user.airport_manager_role? %>
  				Pracownik lotniska - <%= @user.airport.name %>
  			<% else %>
  				Klient
  			<% end %>
  		</p>
	</div>

  <%= link_to 'Powrót do listy', users_path, class: 'btn btn-info' %>
</div>
