<div class="col-md-2 col-md-offset-4"></div>
  <div class="text-center border bg-light border-light p-5 margin-top">
    <p class="h3 mb-4">Edycja danych użytkownika</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-row mb-4">
        <div class="col">
          <%= f.text_field :first_name, autofocus: true, required: true, class: "form-control", placeholder: "Imię" %>
        </div>
        <div class="col">
          <%= f.text_field :last_name, autofocus: true, required: true, class: "form-control", placeholder: "Nazwisko" %>
        </div>
    </div>

    <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "form-control mb-4", placeholder: "E-mail" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control mb-4", placeholder: "Aktualne hasło" %>
    <%= f.password_field :password, required: true, autocomplete: "new-password", class: "form-control", placeholder: "Hasło" %>
    <% if @minimum_password_length %>
        <small id="passwordLength" class="form-text text-muted mb-4">
        Hasło musi zawierać <%= @minimum_password_length %> liter lub więcej
    </small>
    <% end %>

    <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "form-control", placeholder: "Potwierdź hasło" %>

    <%= f.submit "Potwierdź", class: 'btn btn-dark my-4 btn-block' %>

<% end %>
</div>
