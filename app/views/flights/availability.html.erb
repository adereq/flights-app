<h2>Oferty</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nr Lotu</th>
        <th scope="col">Wylot</th>
        <th scope="col">Przylot</th>
        <th scope="col">Data</th>
        <th scope="col">Godz.wylotu</th>
        <th scope="col">Godz.przylotu</th>
        <th scope="col">Klasa ekonomiczna</th>
        <th scope="col">Klasa biznesowa</th>
      </tr>
    </thead>
  <% @results.each do |flight| %>
    <tbody>
      <tr>
        <th scope="row"><%= flight.flight_number %></th>
        <td><%= flight.departure_airport.name %></td>
        <td><%= flight.arrival_airport.name%></td>
        <td><%= flight.departure_date %></td>
        <td><%= flight.departure_time.strftime("%H:%M") %></td>
        <td><%= flight.arrival_time.strftime("%H:%M") %></td>
        <% if params[:passengers].to_i <= flight.economy_free_seats %>
          <td><%= link_to "#{flight.economy_price}", selected_economy_flight_path(flight.id), class: 'btn btn-info' %>
           <% if flight.economy_free_seats <= 4 %>
             <p class='text-danger'><b>Tylko <%= flight.economy_free_seats %> miejsca</b></p></td>
           <% end %>
        <% else %>
          <td>Brak</td>
        <% end %>
        <% if params[:passengers].to_i <= flight.business_free_seats %>
        <td><%= link_to "#{flight.business_price}", selected_business_flight_path(flight.id), class: 'btn btn-warning' %>
           <% if flight.business_free_seats <= 4 %>
             <p class='text-danger'><b>Tylko <%= flight.business_free_seats %> miejsca</b></p></td>
           <% end %>
        <% else %>
          <td>Brak</td>
        <% end %>
      </tr>
    </tbody>
      <% end %>
  </table>