<div class="container">
 <div class="col-sm">
  <h3>Pasa≈ºerowie</h3>
  <%= form_with url: '/bookings', scope: 'booking' do |form| %>
    <% for i in 1..params[:passengers].to_i %>
      <div class="form-row">
        <div class="form-group col-md6">
          <%= form.label :imie %><br>
          <%= form.text_field :lead_guest_first_name, class: 'form-control' %>
        </div>
        <div class="form-group col-md6">
          <%= form.label :nazwisko %><br>
          <%= form.text_field :lead_guest_last_name, class: 'form-control' %>
        </div>
      </div>
    <% end %>
     <%= form.hidden_field :departure_airport, value: @selected_flight.departure_airport.name %>
     <%= form.hidden_field :arrival_airport, value: @selected_flight.arrival_airport.name %>
     <%= form.hidden_field :flight_id, value: @selected_flight.id %>
     <%= form.hidden_field :user_id, value: current_user.id %>  
     <%= form.hidden_field :departure_date, value: @selected_flight.departure_date %>
     <%= form.hidden_field :departure_time, value: @selected_flight.departure_time %>
     <%= form.hidden_field :arrival_time, value: @selected_flight.arrival_time %>
     <%= form.hidden_field :flight_number, value: @selected_flight.flight_number %>
     <%= form.hidden_field :total_price, value: (@selected_flight.economy_price.to_i*params[:passengers].to_i) %>
     <%= form.hidden_field :mail, value: current_user.email %>
     <%= form.hidden_field :passengers, value: params[:passengers].to_i %>
     <%= form.hidden_field :booking_class, value: "economy" %>
     <%= form.submit "Zarezerwuj", class: 'btn btn-light' %>
<% end %>
</div>