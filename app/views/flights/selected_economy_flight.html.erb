<div class="container">
  <div class="row">
    <div class="col-sm">
      <h3>Podsumowanie lotu</h3>
      <p>Wylot: <%= @flight.departure_airport.name %></p>
      <p>Przylot: <%= @flight.arrival_airport.name %></p>
      <p>Data: <%= @flight.departure_date %></p>
      <p>Godz.wylotu: <%= time_formatter(@flight.departure_time) %></p>
      <p>Godz.przylotu: <%= time_formatter(@flight.arrival_time) %></p>
      <p>Numer lotu: <%= @flight.flight_number %></p>
      <p>Cena: <%= @flight.economy_price %></p>
  </div>

  <div class="col-sm">
    <h3>Dane Pasa≈ºera</h3>
    <%= form_with url: '/tickets', scope: 'ticket' do |form| %>
      <div class="form-group">
        <%= form.label :imie %><br>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :nazwisko %><br>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :nr_paszportu %><br>
        <%= form.text_field :document_id, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :kraj %><br>
        <%= form.text_field :country, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= form.label :miejsce %><br>
        <%= form.text_field :seat, class: 'form-control' %>
      </div>
      
      <%= form.hidden_field :departure_airport_name, value: @flight.departure_airport.name %>
      <%= form.hidden_field :arrival_airport_name, value: @flight.arrival_airport.name %>
      <%= form.hidden_field :flight_id, value: @flight.id %>
      <%= form.hidden_field :user_id, value: current_user.id %>  
      <%= form.hidden_field :departure_date, value: @flight.departure_date %>
      <%= form.hidden_field :departure_time, value: @flight.departure_time %>
      <%= form.hidden_field :arrival_time, value: @flight.arrival_time %>
      <%= form.hidden_field :flight_number, value: @flight.flight_number %>
      <%= form.hidden_field :price, value: @flight.economy_price %>
      <%= form.hidden_field :mail, value: current_user.email %>
      <%= form.hidden_field :seat_class, value: "economy" %>

      <%= form.submit "Zarezerwuj", class: 'btn btn-light' %>
    <% end %>
  </div>
</div>

