<div class="col-12">
  <h2>Nowy lot</h2>
</div>
<div class="col-3">
</div>
<div class="col-3">
<%= form_with model: @flight do |form| %>
  <div class="form-group select">
    <%= form.label :departure_airport_id, "Miejsce wylotu" %><br />
    <%= form.collection_select :departure_airport_id, Airport.order(:name),:id, :name, {include_blank: true}, {class: 'btn btn-secondary dropdown-toggle form-control'} %>
  </div>

  <div class="form-group select">
    <%= form.label :arrival_airport_id, "Miejsce przylotu" %><br />
    <%= form.collection_select :arrival_airport_id, Airport.order(:name),:id, :name, {include_blank: true}, {class: 'btn btn-secondary dropdown-toggle form-control'} %>
  </div>
  <div class="form-group">
    <%= form.label :departure_date, "Data wylotu" %><br>
    <%= form.date_field :departure_date, class: 'form-control' %>
  </div> 
 
  <div class="form-group">
    <%= form.label :departure_time, "Godzina wylotu" %><br>
    <%= form.time_field :departure_time, class: 'form-control' %>
  </div>
</div>
<div class="col-3">
  <p>
    <%= form.label :arrival_time, "Godzina przylotu" %><br>
    <%= form.time_field :arrival_time, class: 'form-control' %>
  </p>

  <p>
    <%= form.label :flight_number, "Numer lotu" %><br>
    <%= form.text_field :flight_number, class: 'form-control' %>
  </p>

  <p>
    <%= form.label :seats, "Miejsca" %><br>
    <%= form.text_field :seats, class: 'form-control' %>
  </p>
    <p>
    <%= form.label :price, "Cena" %><br>
    <%= form.text_field :price, class: 'form-control' %>

  </p>
 </div>
<div class="col-3">
</div>
<div class="col-12">
    <%= form.submit "Submit", class: 'btn btn-secondary' %>

</div>
<% end %>