<div class="col-12">
<h2>Nowy lot</h2>
</div>
<div class="col-3">
  </div>
<div class="col-3">
<%= form_with model: @flight do |form| %>
  <div class="form-group">
    <%= form.label :departure_airport_id %><br>
    <%= form.text_field :departure_airport_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :arrival_airport_id %><br>
    <%= form.text_field :arrival_airport_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :departure_date %><br>
    <%= form.date_field :departure_date, class: 'form-control' %>
  </div> 
 
  <div class="form-group">
    <%= form.label :departure_time %><br>
    <%= form.time_field :departure_time, class: 'form-control' %>
  </div>
</div>
<div class="col-3">
  <p>
    <%= form.label :arrival_time %><br>
    <%= form.time_field :arrival_time, class: 'form-control' %>
  </p>

  <p>
    <%= form.label :flight_number %><br>
    <%= form.text_field :flight_number, class: 'form-control' %>
  </p>

  <p>
    <%= form.label :seats %><br>
    <%= form.text_field :seats, class: 'form-control' %>
  </p>
    <p>
    <%= form.label :price %><br>
    <%= form.text_field :price, class: 'form-control' %>
  </p>
 

</div>
<div class="col-3">
  </div>
  <div class="col-12">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
<% end %>