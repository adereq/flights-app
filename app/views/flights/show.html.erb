        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= currency_formatter(@flight.economy_price) %></span>
        </div>
         <div class="col-sm-5">
          <span class="form-label"><%= fa_icon "coins" %> Cena klasa biznesowa</span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= currency_formatter(@flight.business_price) %></span>
        </div>

        <div class="col-sm-5">
          <span class="form-label"><%= fa_icon "chair" %> Miejsca ekonomiczne</span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @flight.economy_seats %></span>
        </div>
        <div class="col-sm-5">
          <span class="form-label"><%= fa_icon "chair" %> Wolne miejsca ekonomiczne</span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @flight.economy_free_seats %></span>
        </div>

        <div class="col-sm-5">
          <span class="form-label"><%= fa_icon "chair" %> Miejsca biznesowe</span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @flight.business_seats %></span>
        </div>
        <div class="col-sm-5 mb-4">
          <span class="form-label"><%= fa_icon "chair" %> Wolne miejsca biznesowe</span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @flight.business_free_seats %></span>
