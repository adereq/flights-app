        <div class="col-sm-5">
          <span class="form-label"><%= fa_icon "plane-departure" %> Wylot</span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @flight.departure_airport.name %></span>
        </div>
        <div class="col-sm-5">
          <span class="form-label"><%= fa_icon "plane-arrival" %> Przylot</span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @flight.arrival_airport.name %></span>
        </div>   
        <div class="col-sm-5">
          <span class="form-label"><%= fa_icon "info-circle" %> Nr lotu</span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @flight.flight_number %></span>
        </div>      
        <div class="col-sm-5">
          <span class="form-label"><%= fa_icon "plane" %> Samolot</span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @flight.airplane.model %></span>
        </div>      

        <div class="col-sm-5">
          <span class="form-label"><%= fa_icon "calendar" %> Data wylotu</span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @flight.departure_date %></span>
        </div>

        <div class="col-sm-5">
          <span class="form-label"><%= fa_icon "clock" %> Godzina wylotu</span>
        </div>
