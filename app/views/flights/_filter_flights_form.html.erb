<%= search_form_for @q do |f| %>
  <div class="form-row mb-4">
    <div class="col">
      <%= f.search_field :departure_airport_name_cont, class:"form-control", placeholder:"Wylot" %>
    </div>
    <div class="col">
      <%= f.search_field :arrival_airport_name_cont, class:"form-control", placeholder:"Przylot" %> 
    </div>
    <div class="col">
      <%= f.search_field :price_gt, class:"form-control", placeholder:"Cena do" %>
    </div>
    <div class="col">
      <%= f.search_field :price_lt, class:"form-control", placeholder:"Cena do" %> 
    </div>
    <div class="col text-right">
      <%= f.submit 'Filtruj', class:"btn btn-dark" %>
    </div>
  </div>
<% end %>