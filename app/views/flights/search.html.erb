<div class="col-12">
  <div class="box" id="flight-search-form">
  <%= form_tag("/flights/result", method: :get) do %>
    <p>
    <%= label_tag(:departure_airport_id, "From:") %>
    <%= select_tag(:departure_airport_id, 
                   options_for_select(@airports_list, params[:departure_airport_id])) %>
    </p>
    <p>
    <%= label_tag(:arrival_airport_id, "From:") %>
	  <%= select_tag(:arrival_airport_id, 
                   options_for_select(@airports_list, params[:arrival_airport_id])) %>
    </p>
    <p>
    <%= label_tag(:data, "Data:") %>
    <%= date_field_tag(:departure_date) %>
    </p>
    <%= submit_tag "Search", :class => "btn" %>
  <% end %>
  </div>
</div>