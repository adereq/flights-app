        <td><%= airplane.economy_seats %></td>
        <td><%= airplane.business_seats %></td>
        <td><%= link_to 'Edytuj', edit_airplane_path(airplane.id) %>  <%= link_to 'UsuÅ„', airplane_path(airplane.id), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
