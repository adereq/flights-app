<div class="col-md-4 col-md-offset-4"></div>
  <div class="text-center border bg-light border-light p-5 col-4">
    <p class="h3 mb-4 font-weight-bold">Potwierdzenie rezerwacji <%= @booking.pnr %></span></p>
    <div class="row text-left">
        <div class="col-sm-5">
          <span class="form-label"><b>Wylot</b></span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @booking.flight.departure_airport.name %></span>
        </div>
        <div class="col-sm-5">
          <span class="form-label"><b>Przylot</b></span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @booking.flight.arrival_airport.name %></span>
        </div>        

        <div class="col-sm-5">
          <span class="form-label"><b>Data wylotu</b></span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @booking.flight.departure_date %></span>
        </div>

        <div class="col-sm-5">
          <span class="form-label"><b>Godzina wylotu</b></span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @departure_time %></span>
        </div>

        <div class="col-sm-5">
          <span class="form-label"><b>Godzina przylotu</b></span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @arrival_time %></span>
        </div>

        <div class="col-sm-5">
          <span class="form-label"><b>Liczba pasażerów</b></span>
        </div>
        <div class="col-sm-6">
          <span class="form-label"><%= @booking.passengers %></span>
        </div>

        <div class="col-sm-5">
          <span class="form-label"><b>Cena całkowita</b></span>
        </div>
        <div class="col-sm-6 mb-4">
          <span class="form-label"><%= @booking.total_price %></span>
        </div>

      </div>
        <table class="table table-hover ">
          <thead class="thead-dark">
            <tr>
              <th>Nr</th>
              <th>Imię</th>
              <th>Nazwisko</th>
              <th>Miejsce</th>
              <th>Nr dokumentu</th>
              <th>Kraj</th>
            </tr>
          </thead>
          <tbody>
            <% if @booking.passengers >= 1 %>
            <tr>
              <td>1</td>
              <td><%= @booking.first_name_1 %></td>
              <td><%= @booking.last_name_1 %></td>
              <td><%= @booking.seat_1 %></td>
              <td><%= @booking.document_1 %></td>
              <td><%= @booking.country_1 %></td>
            </tr>
            <% end %>
            <% if @booking.passengers >= 2 %>
            <tr>
              <td>2</td> 
              <td><%= @booking.first_name_2 %></td>
              <td><%= @booking.last_name_2 %></td>
              <td><%= @booking.seat_2 %></td>
              <td><%= @booking.document_2 %></td>
              <td><%= @booking.country_2 %></td>
            </tr>
            <% end %>
            <% if @booking.passengers >= 3 %>
            <tr>
              <td>3</td>
              <td><%= @booking.first_name_3 %></td>
              <td><%= @booking.last_name_3 %></td>
              <td><%= @booking.seat_3 %></td>
              <td><%= @booking.document_3 %></td>
              <td><%= @booking.country_3 %></td>
            </tr>
            <% end %>
            <% if @booking.passengers >= 4 %>
            <tr>
              <td>4</td>
              <td><%= @booking.first_name_4 %></td>
              <td><%= @booking.last_name_4 %></td>
              <td><%= @booking.seat_4 %></td>
              <td><%= @booking.document_4 %></td>
              <td><%= @booking.country_4 %></td>
            <% end %>
            </tr>
          </tbody>
        </table>