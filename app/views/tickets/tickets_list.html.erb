<h2>Bilety</h2>
<p>Sprzedane bilety: <%= @ticket.count %></p>
<p>Przychód z biletów: <%= @total_income %></p>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Imię</th>
        <th scope="col">Nazwisko</th>
        <th scope="col">Miejsce</th>
        <th scope="col">Klasa</th>
        <th scope="col">Cena</th>
        <th scope="col">Rezerwacja</th>
      </tr>
    </thead>
  <% @ticket.each do |ticket| %>
    <tbody>
      <tr>
        <td><%= ticket.first_name %></td>
        <td><%= ticket.last_name %></td>
        <td><%= ticket.seat %></td>
        <td><%= ticket.seat_class %></td>    
        <td><%= ticket.price %></td>
        <td><%= ticket.pnr %></td>
      </tr>
    </tbody>
    <% end %>
  </table>