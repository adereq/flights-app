<%= form_with model: @ticket do |form| %>
  <div class="form-group">
    <%= form.label :imie %><br>
    <%= form.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :nazwisko %><br>
    <%= form.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :nr_paszportu %><br>
    <%= form.text_field :document_id, class: 'form-control' %>
  </div> 
  <div class="form-group">
    <%= form.label :kraj %><br>
    <%= form.text_field :country, class: 'form-control' %>
  </div>
  <%= form.hidden_field :users_id, value: current_user.id %>
  <%= form.submit "Zarezerwuj", class: 'btn btn-light' %>
  <%= link_to 'Back', flights_result_path, class: 'btn btn-secondary' %>
<% end %>
