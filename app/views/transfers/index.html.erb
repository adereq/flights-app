<div>
  <%= link_to 'Doładuj konto', new_transfer_path, class: 'btn btn-secondary' %>
</div>
<div class="container">
<h2>Moje transakcje</h2>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Data</th>
        <th scope="col">Id</th>
        <th scope="col">Kwota</th>
        <th scope="col">Typ</th>
        <th scope="col">Tytuł</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
  <% @transfers.each do |transfer| %>
  <% if transfer.confirmed %>
    <tbody>
      <tr>
        <td class="green"><%= transfer.created_at %></td>
        <td class="green"><%= transfer.id %></td>
        <td class="green"><%= transfer.amount %></td>
        <td class="green"><%= transfer.kind %></td>
        <td class="green"><%= transfer.title %></td>
        <td class="green"><%= transfer.confirmed %></td>
      </tr>
    </tbody>
    <% else %>
    <tbody>
      <tr>
        <td class="red"><%= transfer.created_at %></td>
        <td class="red"><%= transfer.id %></td>
        <td class="red"><%= transfer.amount %></td>
        <td class="red"><%= transfer.kind %></td>
        <td class="red"><%= transfer.title %></td>
        <td class="red"><%= transfer.confirmed %></td>
      </tr>
    </tbody>
    <% end %>    
    <% end %>
  </table>
</div>