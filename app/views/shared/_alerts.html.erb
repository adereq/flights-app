<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Błąd", sticky: false) %>
<% elsif flash[:notice] %>
  <%= js add_gritter(flash[:notice], title: "Powiadomienie", sticky: false) %>
<% end %>